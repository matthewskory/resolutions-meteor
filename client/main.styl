@import 'nib'
@import url('https://fonts.googleapis.com/css?family=Lora');

html 
  box-sizing border-box


*, *:before, *:after 
  box-sizing: inherit

body {
  font-family: 'Lora', serif;
  font-size: 16px;
  background: #403D4A;
}

.container {
  max-width: 900px;
  margin: 0 auto;
  min-height: 100%;
  background: #99998e;
  box-shadow: 0 2px 10px 0 rgba(0, 0, 0, 0.16), 0 2px 5px 0 rgba(0, 0, 0, 0.26);
}

header {
  padding: 20px 15px 15px 15px;
  position: relative;
}

h1 {
  font-size: 2em;
  margin: 0;
  margin-bottom: 10px;
  display: inline-block;
  margin-right: 1em;
  color: #19181b;
}

.new-resolution input[type="text"] {
  padding: 10px 0;
  background: transparent;
  border: none;
  width: 50%;
  padding-right: 80px;
  font-size: 1em;
  border-bottom: 1px solid rgba(0,0,0,0.3);
}

.new-resolution input:focus{
  outline: 0;
}

ul {
  margin: 0;
  padding: 0;
  background: #99998e;
}

.delete {
  float: right;
  font-weight: bold;
  background: tomato;
  color: #FFF;
  font-size: 1em;
  padding: 5px 10px;
  border: none;
  border-radius: 4px;
}

.submit
  font-weight: bold
  background: #706c82
  color: #fff
  font-size: 1em
  padding: 5px 10px
  border: none
  border-radius: 4px

.toggle-private
  font-weight: bold
  background: #706c82
  color: #fff
  font-size: 1em
  padding: 5px 10px
  border: none
  border-radius: 4px
  float: right

li {
  position: relative;
  list-style: none;
  padding: 20px 15px;
  border-bottom: #bdbc98 solid 1px;
}

li .text {
  margin-left: 12px;
}

li.checked {
  color: #4C4955;
}

li.checked .text {
  text-decoration: line-through;
}
#login {
  float: right;
  font-weight: bold
  background: #403d4a
  color: #fff
  font-size: 1em
  padding: 5px 10px
  border: none
  border-radius: 4px
}